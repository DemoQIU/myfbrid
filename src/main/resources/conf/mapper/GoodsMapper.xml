<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qhx.myfbrid.dao.GoodsMapper">
	<sql id="allColumns">
		goodsId,goodsName,goodsDesc,goodsPrice,goodsAddress,
		goodsCount,goodsCreateTime,goodsImgSrc
	</sql>
	
	<!-- 查找数据库中所有的商品信息 -->
	<select id="selectAllGoods" resultType="com.qhx.myfbrid.model.Goods">
		select 
			<include refid="allColumns"/> 
		from t_goods
	</select>
</mapper>